# Project: HH_BBT2017_LongDouble

# Path to the compiler DIR
COMPILER_DIR   = /usr/local/gcc-9.2.0

# Path to the boost library DIR
BOOST_DIR = /home/libraries/boost_1_71_0

# Compiler and version
CPP      = g++-9.2.0

# Object files
OBJ      = HH_BBT2017_LongDouble.o iappDist_LongDouble.o SpikeTrain_LongDouble.o
LINKOBJ  = HH_BBT2017_LongDouble.o iappDist_LongDouble.o SpikeTrain_LongDouble.o

# Libraries to link
LIBS     = -L"$(COMPILER_DIR)/lib" -static-libgcc -L"$(BOOST_DIR)/libs"

# Include files
CXXINCS  = -I"$(COMPILER_DIR)/include" -I"./"

# Extra flags to give to the C preprocessor and programs
CXXFLAGS = $(CXXINCS) 

BIN      = HH_BBT2017_LongDouble
RM       = rm -f

#============================================================================
# Targets

.PHONY: all all-before all-after clean clean-custom

all: all-before $(BIN) all-after

clean: clean-custom
	${RM} $(OBJ) $(BIN)

$(BIN): $(OBJ)
	$(CPP) $(LINKOBJ) -o $(BIN) $(LIBS)

# Targets to build the object files
HH_BBT2017_LongDouble.o: HH_BBT2017_LongDouble.cpp
	$(CPP) -c HH_BBT2017_LongDouble.cpp -o HH_BBT2017_LongDouble.o $(CXXFLAGS)

iappDist_LongDouble.o: iappDist_LongDouble.cpp
	$(CPP) -c iappDist_LongDouble.cpp -o iappDist_LongDouble.o $(CXXFLAGS)

SpikeTrain_LongDouble.o: SpikeTrain_LongDouble.cpp
	$(CPP) -c SpikeTrain_LongDouble.cpp -o SpikeTrain_LongDouble.o $(CXXFLAGS)
